<% if session[:username] %>
  <p>You are already logged in as <%= session[:username] %>.</p>
<% else %>
  <div class="login">
    <form action="/user/login/guest" method='post'>
      Username: <input type="text" name='username' placeholder='Username' required><br><br>
      Password: <input type="password" name='password' placeholder='Password' required><br><br>
      <button type="submit">Log in</button>
    </form>
    <p>Don't have an account? <a href="/user/register">Register here</a>.</p>
  </div>
<% end %>
